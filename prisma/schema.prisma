generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model TVL {
  address String
  date    DateTime
  tvl     Float

  @@id([date, address])
}

model Volume {
  address String
  date    DateTime
  volume  Float

  @@id([date, address])
}

model Price {
  address String
  date    DateTime
  open    Float
  close   Float
  high    Float
  low     Float

  @@id([date, address])
}

model Swap {
  poolAddress String
  swapForY    Boolean
  binId       Int
  amountIn    BigInt
  amountOut   BigInt
  timestamp   DateTime
  txHash      String
  id          Int      @id @default(autoincrement())
}
