generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model TVL {
  address String
  date    DateTime
  tvl     Float

  @@id([date, address])
}

model Volume {
  address String
  date    DateTime
  volume  Float

  @@id([date, address])
}

model Swap {
  poolAddress String
  tokenIn     String
  tokenOut    String
  amountIn    Float
  amountOut   Float
  timestamp   DateTime
  txHash      String   @id
}
