generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Analytics {
  address      String
  date         DateTime
  volume       BigInt
  fees         BigInt
  token0Locked BigInt
  token1Locked BigInt

  @@id([date, address])
}

model Price {
  address String
  date    DateTime
  open    Float
  close   Float
  high    Float
  low     Float

  @@id([date, address])
}

model Swap {
  poolAddress String
  swapForY    Boolean
  binId       Int
  amountIn    BigInt
  amountOut   BigInt
  timestamp   DateTime
  txHash      String
  id          Int      @id @default(autoincrement())
}

model Liquidity {
  poolAddress String
  amount0     BigInt
  amount1     BigInt
  lowerBound  Int
  upperBound  Int
  timestamp   DateTime
  txHash      String
  id          Int      @id @default(autoincrement())
}
