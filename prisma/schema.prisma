generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Analytics {
  address      String
  date         DateTime
  volume       BigInt
  fees         BigInt
  token0Locked BigInt
  token1Locked BigInt
  usdLocked    Int

  @@id([date, address])
}

model Price {
  address String
  date    DateTime
  open    Float
  close   Float
  high    Float
  low     Float

  @@id([date, address])
}

model Swap {
  poolAddress String
  swapForY    Boolean
  binId       Int
  amountIn    BigInt
  amountOut   BigInt
  timestamp   DateTime
  txHash      String   @id
  usdValue    Float
}

model Liquidity {
  poolAddress String
  amount0     BigInt
  amount1     BigInt
  timestamp   DateTime
  txHash      String   @id
  lowerBound  Int
  upperBound  Int
  usdValue    Float
}
